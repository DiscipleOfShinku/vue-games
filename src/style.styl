body
  margin 0


.btn
  cursor pointer


.center
  margin 0
  position relative
  float left
  left 50%
  top 50%
  transform translate(-50%, -50%)


.app
  width 100vw
  height 100vh
  display grid
  grid-template-columns 200px 1fr


.secondary-nav
  border-right 2px solid #6b5107
  background-color #d2c6c2
  padding 10px 0

.secondary-nav__link
  padding 10px 20px
  display block
  font-size 120%
  text-decoration none
  color #2d2202

.secondary-nav__link:active, .secondary-nav__link:hover
  background-color #c3b3b4


.game-area
  display grid
  grid-template-areas: "primary status" "secondary status"
  justify-content center
  align-content space-evenly
  background-color #d5d5d5

.game-area__primary
  grid-area primary




.deck
  position relative
  width 450px
  height 450px
  border-radius 5px
  border 2px solid #6b5107
  background-color #cbcac2

.deck__chip
  position absolute
  width 100px
  height 100px
  border-radius 5px
  background-color #6b5107

.deck__chip-number
  font-size 400%
  color #cbcac2
  user-select none

.chip-pool-move
  transition transform 0.25s





.snake-area
  position relative
  width 450px
  height 250px

.snake-area__tile,
.snake-area__snake-part
  position absolute
  width 10px
  height 10px

.snake-area__wall
  background-color #323232

.snake-area__grass
  background-color #79da61

.snake-area__apple
  background-color red

.snake-area__tile.snake-area__snake
  background-color #68b953

.snake-area__snake-part
  background-color #6e21a4

.snake-area-move
  transition transform 0.25s



.hands-area
  grid-area secondary
  position relative
  width 450px
  height 200px
  border-radius 5px
  border 2px solid #6b5107
  background-color #cbcac2
  display flex
  flex-direction row
  justify-content space-evenly
  align-items center

.hands-area__element
  width 150px
  height 100px
  border-radius 5px

.hands-area__reset
  background-color #4b4b90

.hands-area__victory
  background-color #308130

.hands-area__defeat
  background-color #b15959

.hands-area__reset p
  color #fff
  font-size 150%

.hands-area__victory p
  color #fff
  font-size 150%
